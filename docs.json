{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Zerion API",
  "colors": {
    "primary": "#2461ED",
    "light": "#4579f4",
    "dark": "#06003C"
  },
  "favicon": "/images/unnamed(3).png",
  "api": {
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["curl", "python", "javascript", "go"],
      "defaults": "required",
      "prefill": true
    }
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Playground",
          "href": "https://zerion-devkit.vercel.app/",
          "icon": "play"
        },
        {
          "anchor": "Support",
          "href": "mailto:api@zerion.io",
          "icon": "headset"
        }
      ]
    },
    "groups": [
      {
        "group": "Getting Started",
        "pages": [
          "introduction",
          "authentication",
          "supported-blockchains"
        ]
      },
      {
        "group": "REST API",
        "openapi": "openapi-v1.yaml"
      }
    ]
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Start building",
      "href": "https://developers.zerion.io"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/zeraborea",
      "github": "https://github.com/zeriontech",
      "discord": "https://discord.gg/zerion"
    }
  },
  "description": "Zerion is an Ethereum and Solana wallet and developer platform focused on making blockchain data easy to use.",
  "logo": "/images/zerion_logo.png"
}
