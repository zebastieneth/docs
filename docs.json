{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Zerion API",
  "colors": {
    "primary": "#2461ED",
    "light": "#4579f4",
    "dark": "#2461ED"
  },
  "favicon": "/images/favicon.png",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "api": {
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["curl", "python", "javascript", "go"],
      "defaults": "required",
      "prefill": true
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "groups": [
          {
            "group": "Get Started",
            "icon": "rocket",
            "iconStyle": "duotone",
            "pages": [
              "introduction",
              "quickstart",
              "authentication",
              "build-with-ai"
            ]
          },
          {
            "group": "Core Concepts",
            "icon": "book",
            "iconStyle": "duotone",
            "pages": [
              "supported-blockchains",
              "pagination-and-filtering",
              "error-handling"
            ]
          },
          {
            "group": "REST API",
            "icon": "square-terminal",
            "iconStyle": "duotone",
            "openapi": "openapi-v1.yaml"
          },
          {
            "group": "Webhooks",
            "icon": "bell",
            "iconStyle": "duotone",
            "pages": [
              "webhooks"
            ]
          }
        ]
      },
      {
        "tab": "Changelog",
        "pages": [
          "changelog"
        ]
      }
    ]
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://developers.zerion.io"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/zeraborea",
      "github": "https://github.com/zeriontech",
      "discord": "https://discord.gg/zerion"
    }
  },
  "description": "Zerion is an Ethereum and Solana wallet and developer platform focused on making blockchain data easy to use."
}
