{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Zerion API",
  "colors": {
    "primary": "#2461ED",
    "light": "#2461ED",
    "dark": "#2461ED"
  },
  "favicon": "/images/favicon.png",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "api": {
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["curl", "python", "javascript", "go"],
      "defaults": "required",
      "prefill": true
    }
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://dashboard.zerion.io",
          "icon": "square-terminal"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Home",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "quickstart",
              "authentication",
              {
                "group": "Build with AI",
                "pages": [
                  "build-with-ai/overview",
                  "build-with-ai/mcp",
                  "build-with-ai/x402",
                  "build-with-ai/zerion-skill"
                ]
              }
            ]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "supported-blockchains",
              "endpoints-and-schema",
              "pagination-and-filtering",
              "error-handling",
              "rate-limits",
              "spam-filtering"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "REST API",
            "openapi": "openapi-v1.yaml"
          }
        ]
      },
      {
        "tab": "Recipes",
        "pages": [
          "recipes",
          "recipes/multi-chain-portfolio",
          "recipes/defi-positions",
          "recipes/wallet-token-balances",
          "recipes/transaction-history",
          "recipes/wallet-activity-alerts",
          "recipes/wallet-pnl-tracker"
        ]
      },
      {
        "tab": "Changelogs",
        "pages": [
          "changelog"
        ]
      }
    ]
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://dashboard.zerion.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.zerion.io"
    }
  },
  "integrations": {},
  "contextual": {
    "options": []
  },
  "footer": {
    "socials": {
      "x": "https://x.com/zerion"
    }
  },
  "fonts": {
    "heading": {
      "family": "Aeonik Pro",
      "weight": 700,
      "source": "/fonts/AeonikPro-VF.woff2",
      "format": "woff2"
    },
    "body": {
      "family": "Aeonik Pro",
      "weight": 400,
      "source": "/fonts/AeonikPro-VF.woff2",
      "format": "woff2"
    }
  },
  "description": "Zerion is an Ethereum and Solana wallet and developer platform focused on making blockchain data easy to use."
}
